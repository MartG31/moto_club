{% extends 'admin.html.twig' %}

{% block title %}Réunions{% endblock %}

{% block stylesheets %}<link rel="stylesheet" href="/css/calendar.css">{% endblock %}

{% block content %}
    
	<section class="py-2 mb-5">
	<h2>Réunions </h2>
		<h3>Liste des réunions sans CR</h3>
		{% if reuSansCr is defined %}
			{% for reuSansCr in reusSansCr %}
			  	<div class="card-deck my-4 alert alert-warning">
			    	<div class="card">
				  	  	<div class="card-header">
				  			<div class="card-title py-2">
				  	            <a class="btn btn-primary float-right" href="{{ path('view_reunion', {id : reuSansCr.getId()}) }}" role="button">Afficher</a>
				  				<b>{{ reuSansCr.getTitre() }}</b>, le {{ reuSansCr.getDatetimeReu()|date("d/m/Y") }} (<em>{{ reuSansCr.getTypeReu() }}</em>)
				  			</div>		     
				  			<div class="card-footer small text-muted mb-2">
				  				Mise à jour le {{ reuSansCr.getDatetimePost()|date("d/m/Y") }}
				  			</div>
				  	    </div>
			  		</div>
			  	</div>
			{%  endfor %} 
		{% else %}
		  	<div class="card-deck my-4 ">
		    	<div class="card">
			  	  	<div class="card-header">
			  			<div class="card-title py-2">
			  	            <p>Aucune réunion en attente de compte-rendu.</p>
			  			</div>
			  	    </div>
		  		</div>
		  	</div>
		{% endif %}
		<h3>Liste des réunions à venir</h3>
		{% for reuNonPassee in reusNonPassees %}
			<div class="card-deck my-4">
			  	<div class="card">
				  	<div class="card-header ">
						<div class="card-title py-2">
				          	<a class="btn btn-primary float-right" href="{{ path('view_reunion', {id : reuNonPassee.getId()}) }}" role="button">Afficher</a>
							<b>{{ reuNonPassee.getTitre() }}</b>, le {{ reuNonPassee.getDatetimeReu()|date("d/m/Y") }} (<em>{{ reuNonPassee.getTypeReu() }}</em>) 					
			  			</div>
						<div class="card-footer small text-muted mb-2">
							Mise à jour le {{ reuNonPassee.getDatetimePost()|date("d/m/Y") }}
						</div>
				    </div>
				</div>
			</div>
		{%  endfor %} 
		<h3>Liste des réunions passées</h3>
		{% for reunionPassee in reunionsPassees %}
		  	<div class="card-deck my-4">
		    	<div class="card">
			  	  	<div class="card-header"> 
			  			<div class="card-title py-2">
			  	            <a class="btn btn-primary float-right" href="{{ path('view_reunion', {id : reunionPassee.getId()}) }}" role="button">Afficher</a>
			  				<b>{{ reunionPassee.getTitre() }}</b>, le {{ reunionPassee.getDatetimeReu()|date("d/m/Y") }} (<em>{{ reunionPassee.getTypeReu() }}</em>)
			  			</div>
			  			<div class="card-footer small text-muted mb-2">
			  				Mise à jour le {{ reunionPassee.getDatetimePost()|date("d/m/Y") }}
			  			</div>
			  	    </div>
		  		</div>
		  	</div>
		{%  endfor %} 
	</section>

{% endblock %}

{% block javascripts %}<script type="text/javascript" src="/js/calendar.js"></script>{% endblock %}
