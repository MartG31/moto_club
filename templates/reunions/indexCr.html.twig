{% extends 'admin.html.twig' %}

{% block title %}Compte-rendus{% endblock %}

{% block content %}
    
<div class="card mb-3">
    <h1>Accueil compte-rendu </h1>
  	<div class="card-header">
    	<i class="fas fa-table"></i>Liste des compte-rendus
    </div>
  	<div class="card-body">
	    <div class="table-responsive">
	      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
	        <thead>
	          <tr>
	            <th>Intitulé du CR</th>
	            <th>Type de réunion</th>
	            <th>Date de la réunion</th>
	            <th></th>
	            <th></th>
	          </tr>
	        </thead>
	        <tbody>
	          {% for crTrouve in crTrouves %}
	          <tr>
	            <td>{{ crTrouve.getTitre() }} </td>
	            <td>{{ crTrouve.getTypeReu() }} </td>
	            <td>{{ crTrouve.getDatetimeReu()|date("d/m/Y") }} </td>
	            <td><a class="btn btn-secondary" href="{{ path('edit_cr', {id : crTrouve.getId()}) }}" role="button">Modifier</a></td>
	            <td><a class="btn btn-secondary" href="{{ path('view_reunion', {id : crTrouve.getId()}) }}" role="button">Afficher</a></td>
	          </tr>
	          {%  endfor %} 
	        </tbody>

	      </table>
	    </div>
	</div>
	<div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>
{% endblock %}
