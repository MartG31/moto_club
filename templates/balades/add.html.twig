{% extends 'admin.html.twig' %}

{% block title %}Nouvelle balade{% endblock %}

{% block content %}

	<div class="container">
		<div class="card">
			<div class="card-header">Proposer une nouvelle balade</div>
			<div class="card-body">
				<form method="post" enctype="multipart/form-data">
					<div class="form-group row">
						<label for="titre" class="col-lg-3">Titre</label>
						<input id="titre" class="col-lg-9 form-control" name="titre" type="text" value="{{ post.titre ?? '' }}">
					</div>
					<div class="form-group row">
						<label for="contenu" class="col-lg-3">Contenu</label>
						<textarea id="contenu" class="col-lg-9 form-control" name="contenu" cols="50" rows="6">{{ post.contenu ?? '' }}</textarea>
					</div>
					<div class="form-group row">
						<label for="date_debut" class="col-lg-3">Date de début</label>
						<input id="date_debut" class="col-lg-9 form-control" name="date_debut" type="date" value="{{ post.date_debut ?? '' }}">
					</div>
					<div class="form-group row">
						<label for="date_fin" class="col-lg-3">Date de fin</label>
						<input id="date_fin" class="col-lg-9 form-control" name="date_fin" type="date" value="{{ post.date_fin ?? '' }}">
					</div>
					<!-- <div class="form-group row">
						<label for="gps_file" class="col-lg-3">Ajouter un fichier GPS</label>
						<input id="gps_file" class="col-lg-9" name="gps_file" type="file" value="{{ post.gps_file ?? '' }}">
					</div> -->
					<div class="form-group row d-flex justify-content-end">
						<input type="submit" class="btn btn-primary btn-lg m-1" value="Proposer une balade">
						<input type="reset" class="btn btn-secondary btn-lg m-1" value="Réinitialiser">
					</div>

					{% if errors is not empty %}
						<div class="alert alert-warning">
							{{ errors|join('<br>')|raw }}
						</div>
					{% elseif success == true %}
						<div class="alert alert-success">La balade a été ajoutée avec succès.</div>
					{% endif %}
				</form>
			</div>
		</div>
	</div>
		
{% endblock %}
