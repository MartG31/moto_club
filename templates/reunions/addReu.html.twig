{% extends 'admin.html.twig' %}

{% block title %}Réunions{% endblock %}

{% block content %}

    
<div class="container">
  <div class="card card-register mx-auto mt-5">
    <div class="card-header">Ajouter une réunion</div>
    {% if errors is not empty %}
      <div class="alert alert-danger">{{errors|raw}}</div>
    {% elseif success == true %}
      <div class="alert alert-success">Votre réunion a bien été ajoutée</div>
    {% endif %}
    <div class="card-body">
      <form method="post">
        <div class="form-group">
          <div class="form-row">
            <div class="col-md-6">
              <label for="titre">Intitulé de la réunion</label>
              <input type="text" id="titre" name="titre" class="form-control" required="required" autofocus="autofocus">
            </div>
            <div class="col-md-6">
              <label for="type">Type de réunion</label>
              <input type="text" id="type-reu" name="type" class="form-control" placeholder="ex: AG" required="required">
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="contenu">Contenu</label>
          <input type="text" id="contenu" name="contenu" class="form-control" placeholder="Contenu" required="required">
        </div>
        <div class="form-group">
          <div class="form-row">
            <div class="col-md-6">
              <label for="date">Date de la réunion</label>
              <input type="datetime" id="date" name="date" class="form-control" required="required">
            </div>
            <div class="col-md-6">
                <label for="lieu">Lieu de la réunion</label>
                <input type="text" id="lieu" name="lieu" class="form-control" required="required">
            </div>
          </div>
        </div>
        <input type="submit" value="Ajouter" class="btn btn-primary btn-block">
      </form>
    </div>
  </div>
</div>
{% endblock %}
