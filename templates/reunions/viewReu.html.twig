{% extends 'base.html.twig' %}

{% block title %}Détails d'une réunion{% endblock %}

{% block content %}
    
<div class="card mb-3">
    <h1>Détails de réunions  </h1>
  	<div class="card-header">
    	<i class="fas fa-table"></i>{{ reunionTrouvee.getTitre() }}
    </div>
  	<div class="card-body">
	    <div class="table-responsive">
	      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
	        <thead>
	          <tr>
	            <th>Intitulé de la réunion</th>
	            <th>Type de réunion</th>
	            <th>Date et heure </th>
	            <th>Lieux</th>
	            <th>Contenu de la réunion</th>
	            <th>Proposé par </th>
	            <th>Compte-rendu </th>

	            <th></th>
	          </tr>
	        </thead>
	        <tbody>
	          <tr>
	            <td>{{ reunionTrouvee.getTitre() }} </td>
	            <td>{{ reunionTrouvee.getTypeReu() }} </td>
	            <td>Le {{ reunionTrouvee.getDatetimeReu()|date("d/m/Y") }} à {{ reunionTrouvee.getDatetimeReu()|date("H:i") }} </td>
	            <td>{{ reunionTrouvee.getLieuReu() }} </td>
	            <td>{{ reunionTrouvee.getContenu() }} </td>
	            <td>{{ reunionTrouvee.getUser().getPrenom() ?? '' }} </td>
	            <td>{{ crTrouve.getUser().getPrenom() ?? '' }} </td>
	            <td>
	            	{% if crTrouve is not null %}
	            	<a class="btn btn-success btn-block" href="{{ path('edit_cr', {id : crTrouve.getId()}) }}" role="button">Modifier le CR</a>
	            	{% else %}
	            	<a class="btn btn-success btn-block" href="{{ path('add_cr', {id : reunionTrouvee.getId()}) }}" role="button">Ajouter le CR</a>
	            	<a class="btn btn-primary btn-block" href="{{ path('edit_reunion', {id : reunionTrouvee.getId()}) }}" role="button">Modifier</a>
	            	{% endif %}
	            	<a class="btn btn-secondary btn-block" href="{{ path('index_reunions') }}" role="button">Liste des réunions</a>
	            	<a class="btn btn-danger btn-block" href="{{ path('del_reunion', {id : reunionTrouvee.getId()}) }}" role="button">Supprimer</a>
	            </td>
	          </tr>
	        </tbody>

	      </table>
	    </div>
	</div>
	<div class="card-footer small text-muted">Reunion postée le  {{reunionTrouvee.getDatetimePost()|date("d/m/Y")}}</div>
</div>
{% endblock %}
