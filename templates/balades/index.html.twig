{% extends 'admin.html.twig' %}

{% block title %}Balades{% endblock %}


{% block content %}
	{% for bal in balades %}
		<div>
			<div>{{ bal.getTitre() }}</div>

			{% if bal.getDateDebut() == bal.getDateFin() %}
				<div>le {{ bal.getDateDebut()|date('d/m/Y') }}</div>
			{% else %}
				<div>du {{ bal.getDateDebut()|date('d/m/Y') }} au {{ bal.getDateFin()|date('d/m/Y') }}</div>
			{% endif %}

			<div>{{ bal.getContenu() }}</div>
			<div>
				Posté par 
				{{ bal.getUser().getNom() ~ ' ' ~ bal.getUser().getPrenom() }} 
				le 
				{{ bal.getDatetimePost()|date('d/m/Y') }} 
				à 
				{{ bal.getDatetimePost()|date('H:i') }}
			</div>
		</div>
	{% endfor %}

	
{% endblock %}
