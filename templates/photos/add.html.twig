{% extends 'admin.html.twig' %}

{% block title %}Nouvelle photo{% endblock %}

{% block content %}

	<section class="py-2 mb-5">
		<div class="card">
			<div class="card-header">Ajouter une nouvelle photo</div>
			<div class="card-body">
				<form method="post" enctype="multipart/form-data">
					<div class="form-group row">
						<label for="photo" class="col-lg-3">Fichier à ajouter</label>
						<input id="photo" class="col-lg-9" name="photo" type="file" value="{{ post.photo ?? '' }}">
					</div>
					<div class="form-group row">
						<label for="legende" class="col-lg-3">Légende</label>
						<input id="legende" class="col-lg-9 form-control" name="legende" type="text" value="{{ post.legende ?? '' }}">
					</div>
					<div class="form-group row d-flex justify-content-center">
						<input type="submit" class="btn btn-primary btn-lg" value="Ajouter une photo">
						<input type="reset" class="btn btn-secondary btn-lg" value="Réinitialiser">
					</div>

					{% if errors is not empty %}
						<div class="alert alert-warning">{{ errors|join('<br>')|raw }}</div>
					{% elseif success == true %}
						<div class="alert alert-success">La photo a été ajoutée avec succès.</div>
					{% endif %}
				</form>
			</div>
		</div>
	</section>
	
		
{% endblock %}
