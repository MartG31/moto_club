{% extends 'admin.html.twig' %} 

{% block title %}Admin - Utilisateurs{% endblock %}

{% block content %}


  <!-- DataTables Example -->
  <div class="card mb-3">
    <div class="card-header">
      <i class="fas fa-table"></i>
      Liste des utlisateurs</div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>Nom</th>
              <th>Prénom</th>
              <th>Email</th>
              <th>Date inscription</th>
              <th>Date adhésion</th>
              <th>Rang</th>
            </tr>
          </thead>
          <tbody>
            {% for user in users %}
            <tr>
              <td>{{ user.getNom() }}</td>
              <td>{{ user.getPrenom() }}</td>
              <td>{{ user.getEmail() }}</td>
              <td>{{ user.getDatetimeInscription|date('d/m/Y') }}</td>
              <td>{{ user.getDatetimeAdhesion|date('d/m/Y') }}</td>
              <td>
                    {% if 'admin' in app.session.get('ranks') %}
                <form>
                  <select>
                    {% for key, rank in nomsRanks %}
                      <option name="{{user.getId()}}" value="{{key}}"{% if key == user.getAcces %}{{' selected'}}{% endif %}>{{rank}}</option>
                  {% endfor %}
                </select>
                    {% else %}
                      {{nomsRanks[user.getAcces()]}}
                    {% endif %}
              </form>
            </td>
            </tr>
            {% endfor %}
          </tbody>

        </table>
      </div>
    </div>
    <div class="card-footer small text-muted">GSM3 Copyright &copy; - {{"now"|date("Y")}}</div>
  </div>
{% endblock %}

      